{% extends 'base-admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
<img src={{product.photo}}  width="250">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
                <th>RAM</th>
                <td>{{ product.RAM }} KB</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
                <th>CPU Speed</th>
                <td>{{ product.CPUSP}} MHZ</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
                <th>Operating Voltage</th>
                <td>{{ product.OPV}} V</td>
            </tr>
          
            <tr>
                <th>Dispo</th>
                <td>{{ product.dispo }}</td>
                <th>Number Of Pins</th>
                <td>{{ product.Pins }} Pins</td>
            </tr>
              <tr>
                <th>Infos</th>
                <td>{{ product.infos }}</td>
            </tr>
        </tbody>
    </table>



    {{ include('product_crud/_delete_form.html.twig') }}
{% endblock %}
